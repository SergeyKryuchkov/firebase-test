    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "firebase-admin": "^7.1.1",
    "firebase-functions": "^2.2.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.1.4"
  },
  "private": true
}
